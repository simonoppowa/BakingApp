<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    tools:context=".MainActivity"
    card_view:cardCornerRadius="8dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/recipe_step_thumbnail_imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:contentDescription="@string/thumbnail_image"
            android:scaleType="centerCrop"
            android:src="@color/cardview_dark_background"/>

        <TextView
            android:id="@+id/recipe_step_title_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="#FFFFFF"
            android:padding="16dp"
            android:layout_centerInParent="true"
            android:layout_alignBottom="@id/recipe_imageView"
            android:background="#53000000"
            tools:text="Introduction"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>